<% layout('layots/boilerplate') %>

<div   id="map" style = "width:100%; height:500px ;color:cadetblue ;margin: rgb(221, 117, 117);"></div>

<div class="col-6 offset-3">
  <h1 class="offset-3">Cards Available</h1>
  

  <% for(let card of cards) {%>
  
    
    
  <div class="card mb-3 " style="background-color: rgba(175, 233, 155, 0.26)">
    
    <div class="row">

      <div class="col-md-4">
            
          <img class="img-thumbnail" src="https://media.istockphoto.com/photos/sun-bursting-through-clouds-over-traditional-british-houses-with-in-picture-id931497792?s=612x612" alt="" >
        
      </div>

      <div class="col-md-8">
       
        <div class="card-body">
            <h4 class="card-title" style="font-weight:bold "> Mess: IFC <%=card.mess%> </h4>
            <p class="card-text"> <%= card.description%>
            
                
            </p>
          
            <a class="btn btn-primary"   href="cards/<%= card._id%> ">View Details</a>
        </div>

      </div>

    </div>

  
  
 

</div>
   <% } %>
</div>

<script>
  const cards = {features: <%-JSON.stringify(cards)%>}
</script>
<script src="/javascripts/cluster.js"></script>
