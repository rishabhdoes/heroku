<% layout('layots/boilerplate') %>

<div id="map" style = "width:100%; height:500px"></div>

<div class="col-6 offset-3">
  <h1 class="offset-3">All campgrounds</h1>
  

  <% for(let campground of campgrounds) {%>

  <div class="card mb-3 " style="background-color: rgba(129, 147, 180, 0.26)">
    <div class="row">

      <div class="col-md-4">
            <% if(campground.images.length>0) {%> 
        <img class="img-thumbnail" src="<%=campground.images[0].url%>" alt="" >
        <% }else{ %>
          <img class="img-thumbnail" src="https://media.istockphoto.com/photos/sun-bursting-through-clouds-over-traditional-british-houses-with-in-picture-id931497792?s=612x612" alt="" >
          <% } %> 

          
         <h5><%= campground.location %></h5>
      </div>

      <div class="col-md-8">
       
        <div class="card-body">
            <h4 class="card-title" style="font-weight:bold "> <%= campground.title  %> </h4>
            <p class="card-text"> <%= campground.description%>
            
                
            </p>
          
            <a class="btn btn-primary"   href="campgrounds/<%= campground._id%> ">view <%= campground.title %> </a>
        </div>

      </div>

    </div>

  
  
 

</div>
   <% } %>
</div>

<script>
  const campgrounds = {features: <%-JSON.stringify(campgrounds)%>}
</script>
<script src="/javascripts/cluster.js"></script>
